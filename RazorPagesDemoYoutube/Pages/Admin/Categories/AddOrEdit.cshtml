@page
@model Admin.Categories.AddOrEditModel
@{
}


<div class="card w-50" style="margin:auto">
	<div class="card-header bg-info text-white" style="font-weight:bold;">
		<i class="bi bi-plus-square"></i> New Category
	</div>

	<form method="post">
		<div class="card-body">
			<div class="mb-3">
				<label>@Html.LabelFor(c=>c.category.Name)</label>
				<input asp-for="category.Name" type="text" class="form-control" />

				<span asp-validation-for="category.Name" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label> @Html.LabelFor(c => c.category.OrderDispay)</label>
				<input asp-for="category.OrderDispay" type="text" class="form-control" />
				<span asp-validation-for="category.OrderDispay" class="text-danger"></span>
			</div>
		</div>
		<div class="card-footer text-muted">
		<button type="submit" class="btn btn-primary"> <i class="bi bi-check-circle"></i> Save</button>
		</div>

	</form>
</div>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}